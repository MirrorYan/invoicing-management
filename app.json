{
  "resolveAlias": {
    "@/*": "/*"
  },
  "pages": [
    "pages/home/index",
    "pages/purchase/purchase",
    "pages/sale/sale",
    "pages/back/back",
    "pages/depository/depository",
    "pages/modify/index",
    "pages/login/login"
  ],
  "window": {
    "backgroundColor": "#f9fafc",
    "backgroundTextStyle": "dark",
    "navigationBarBackgroundColor": "#f9fafc",
    "navigationBarTitleText": "商品管理中心",
    "navigationBarTextStyle": "black"
  },
  "tabBar": {
    "selectedColor": "#6C8FF8",
    "color": "#200E32",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "/assets/images/tabbar-home.png",
        "selectedIconPath": "/assets/images/tabbar-home_active.png"
      },
      {
        "pagePath": "pages/purchase/purchase",
        "iconPath": "/assets/images/tabbar-func.png",
        "selectedIconPath": "/assets/images/tabbar-func_active.png"
      },
      {
        "pagePath": "pages/sale/sale",
        "iconPath": "/assets/images/tabbar-form.png",
        "selectedIconPath": "/assets/images/tabbar-form_active.png"
      },
      {
        "pagePath": "pages/back/back",
        "iconPath": "/assets/images/tabbar-own.png",
        "selectedIconPath": "/assets/images/tabbar-own_active.png"
    }]
  },
  "usingComponents": {
    "van-tabbar": "@vant/weapp/tabbar/index",
    "van-tabbar-item": "@vant/weapp/tabbar-item/index",
    "van-cell": "@vant/weapp/cell/index",
    "van-cell-group": "@vant/weapp/cell-group/index",
    "van-button": "@vant/weapp/button/index",
    "van-field": "@vant/weapp/field/index",
    "van-datetime-picker": "@vant/weapp/datetime-picker/index",
    "van-action-sheet": "@vant/weapp/action-sheet/index"
  },
  "sitemapLocation": "sitemap.json"
}