      {
        "pagePath": "pages/back/back",
        "text": "退货单",
        "iconPath": "/images/back_icon.png",
        "selectedIconPath": "/images/back_select.png"
      },
      {
        "pagePath": "pages/depository/depository",
        "text": "仓库",
        "iconPath": "/images/stock_icon.png",
