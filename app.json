{
  "resolveAlias": {
    "@/*": "/*"
  },
  "pages": [
    "pages/index/index",
    "pages/purchase/purchase",
    "pages/sale/sale",
    "pages/back/back",
    "pages/depository/depository",
    "pages/modify/index",
    "pages/login/login"
  ],
  "window": {
